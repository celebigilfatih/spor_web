# Environment Variables Template
# Bu dosyayı .env olarak kopyalayın ve değerleri düzenleyin

# Veritabanı ayarları
DB_PASSWORD=güçlü_veritabanı_şifresi_buraya
DB_ROOT_PASSWORD=çok_güçlü_root_şifresi_buraya

# Redis ayarları
REDIS_PASSWORD=redis_şifresi_buraya

# Uygulama ayarları
ENVIRONMENT=production
DEBUG_MODE=false
APP_SECRET_KEY=uygulama_gizli_anahtarı_buraya

# SSL ayarları
SSL_CERT_PATH=/etc/ssl/certs/spor_kulubu.crt
SSL_KEY_PATH=/etc/ssl/certs/spor_kulubu.key

# Email ayarları (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=email_şifreniz
SMTP_FROM=noreply@sporkulubu.com

# Backup ayarları
BACKUP_RETENTION_DAYS=30
BACKUP_TIME=02:00

# Log seviyesi
LOG_LEVEL=error

# CDN ayarları (isteğe bağlı)
CDN_URL=https://cdn.sporkulubu.com

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Sosyal medya
FACEBOOK_APP_ID=your_facebook_app_id
TWITTER_API_KEY=your_twitter_api_key